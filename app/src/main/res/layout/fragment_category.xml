<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="categoryFrag"
            type="com.hack.twenty.fragments.CategoryFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">

        <RelativeLayout
            android:id="@+id/fragment_order_category_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="30dp">

            <LinearLayout android:id="@+id/category_one"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/intro_button_selector"
                android:orientation="vertical"
                android:onClick="@{categoryFrag.onClick}">

                <com.github.omadahealth.typefaceview.TypefaceTextView
                    android:id="@+id/bedroom_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bedroom"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <ImageView android:id="@+id/bedroom_image"
                    android:layout_width="140dp"
                    android:layout_height="140dp"

                    android:background="@color/purple_500" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_order_category_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="30dp">

            <LinearLayout android:id="@+id/category_two"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/intro_button_selector"
                android:orientation="vertical"
                android:onClick="@{categoryFrag.onClick}">

                <com.github.omadahealth.typefaceview.TypefaceTextView
                    android:id="@+id/kitchen_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kitchen"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <ImageView android:id="@+id/kitchen_image"
                    android:layout_width="143dp"
                    android:layout_height="143dp"
                    android:layout_centerVertical="true"
                    android:background="@color/purple_500" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_order_category_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="30dp">

            <LinearLayout android:id="@+id/category_three"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/intro_button_selector"
                android:orientation="vertical"
                android:onClick="@{categoryFrag.onClick}">

                <com.github.omadahealth.typefaceview.TypefaceTextView
                    android:id="@+id/bathroom_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bathroom"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <ImageView android:id="@+id/bathroom_image"
                    android:layout_width="143dp"
                    android:layout_height="143dp"
                    android:layout_centerVertical="true"
                    android:background="@color/purple_500" />
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

</layout>